<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imagenPrincipal"
        android:layout_width="334dp"
        android:layout_height="413dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/foto1" />

    <Button
        android:id="@+id/botonPlay"
        style="@style/botonPlay"
        android:layout_marginStart="60dp"
        android:layout_marginTop="45dp"
        android:onClick="playPause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenPrincipal" />

    <Button
        android:id="@+id/botonStop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/stop"
        android:onClick="stop"
        app:layout_constraintBottom_toBottomOf="@+id/botonPlay"
        app:layout_constraintStart_toEndOf="@+id/botonPlay"
        app:layout_constraintTop_toBottomOf="@+id/imagenPrincipal" />

    <Button
        android:id="@+id/botonPrev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/anterior"
        android:onClick="anterior"
        app:layout_constraintBottom_toBottomOf="@+id/botonStop"
        app:layout_constraintStart_toEndOf="@+id/botonStop"
        app:layout_constraintTop_toBottomOf="@+id/imagenPrincipal"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/botonNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/siguiente"
        android:onClick="siguiente"
        app:layout_constraintBottom_toBottomOf="@+id/botonPrev"
        app:layout_constraintStart_toEndOf="@+id/botonPrev"
        app:layout_constraintTop_toBottomOf="@+id/imagenPrincipal"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>