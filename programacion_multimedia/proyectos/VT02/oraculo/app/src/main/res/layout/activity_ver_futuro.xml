<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:backgroundTint="#000000"
    tools:context=".ActivityVerFuturo">
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

      <Space
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:padding="20sp" />

      <ImageView
          android:id="@+id/imageSigno"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/acuario" />

      <TextView
          android:id="@+id/textVerFuturo"
          android:layout_width="match_parent"
          android:layout_height="365dp"
          android:gravity="center_horizontal|center_vertical"
          android:padding="10sp"
          android:text="Aquí veremos tu futuro"
          android:textColor="#F6F5F5"
          android:textSize="40sp" />

      <Button
          android:id="@+id/btnVolver"
          android:layout_width="300sp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|center_vertical"
          android:backgroundTint="#D30F0F"
          android:fontFamily="sans-serif-black"
          android:padding="10sp"
          android:text="Volver atrás"
          android:textSize="25sp" />

      <Space
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:padding="20sp" />
    </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>